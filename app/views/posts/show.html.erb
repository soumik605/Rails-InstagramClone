<div class="row mt-3 container-md shadow border rounded p-2 mb-5 mx-auto">

    <div class="col-7">

        <%= render partial: "postmore", locals: {post: @post} %>
       
        <div class="img mb-2">
            <img src="https://cdn.britannica.com/67/19367-050-885866B4/Valley-Taurus-Mountains-Turkey.jpg" class="img-fluid" alt="Responsive image">
        </div>
        <%= render partial: "likes/form", locals: {post: @post} %>
        <h5 class="mt-3"><%= @post.title %></h5>
        <p><%= @post.likes.count %> Likes</p>
    </div>

    <div class="col-5 d-flex align-items-start flex-column" >
        <h5>Comments (<%= @post.comments.count || 0 %>)</h5>
         <div class=" p-2 w-100">
             <%= render partial: "comments/form", locals: {post: @post} %>
        </div>
        <div class="px-3 w-100 ">
            <% @post.comments.each do |comment| %>
                <%= render partial: "comments/comment", locals: {comment: comment, post: @post} %>
            <% end %>
        </div>

       
        
       
    </div>
</div>
